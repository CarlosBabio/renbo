<div class="dropdown">
  <button class="ticket-dropdown dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Select your unique ticket....
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <%# INSERT SEATING LOGIC HERE %>
    <% @ticket.tokens.each do |token| %>
      <% if token.status == "new" %>
        <li><a class="dropdown-item" href="#"><%= @ticket.title %> #<%= token.sequence_num %></a></li>
      <% end %>
    <% end %>
  </ul>
</div>
