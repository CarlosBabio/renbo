<div class="navbar-transparent navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "renbologo" %>
    <% end %>

    <%= render "shared/searchbar", hidden: ("invisible" if action_name =="home"), parent: "searchbar-nav" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="nav-end">
      <button class="renbo-btn">Marketplace</button>
      <%= link_to cart_path do %>
        <button><i class="fas fa-shopping-cart"></i></button>
      <% end %>
      <% if current_user %>
        <div class="dropdown">
          <button type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            <%= image_tag current_user.avatar, class: "avatar" %>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><%= link_to "Collection", user_collection_path(current_user) %></li>
            <li><%= link_to "Bookmarks", bookmarks_path  %></li>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      <% else %>
        <div class="dropdown">
          <button type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user"></i>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><%= link_to "Sign in", new_user_session_path %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
